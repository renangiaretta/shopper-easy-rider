generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Driver {
  id           Int     @id
  name         String
  description  String
  vehicle      String
  review       Review?
  rideFare     Float
  min_distance Int
  rides        Ride[]
}

model Review {
  id       Int     @id @default(autoincrement())
  rating   Int
  comment  String
  driver   Driver? @relation(fields: [driverId], references: [id])
  driverId Int?    @unique()
}

model Ride {
  id          Int      @id @default(autoincrement())
  customer_id String
  date        DateTime @default(now())
  origin      String
  destination String
  distance    Int
  duration    String
  driverId    Int
  driver      Driver   @relation(fields: [driverId], references: [id])
  value       Float
}